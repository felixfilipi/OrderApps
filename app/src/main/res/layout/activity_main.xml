<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_baseline_food_bank_24"
        android:layout_gravity="center"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:text="Nomer Pesanan"
        android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/order_num"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:text="0"
            android:background="@color/purple_500"
            android:textColor="@color/white"
            />
            <TextView
                android:id="@+id/reset_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="15dp"
                android:text="Ulang Pemesanan"
                android:clickable="true"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Makanan"
        android:textFontWeight="600"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal"
                android:useDefaultMargins="true"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/gettyimages_1293479617" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Salad Bowl"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="55000"
                            android:textColor="@android:color/darker_gray"
                            android:textFontWeight="400"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/food_detail1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:paddingTop="10sp"
                            android:text="Detail Produk"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:clickable="true"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/button_minus1"
                        android:layout_width="50sp"
                        android:layout_height="60sp"
                        android:text="-"
                        />

                    <TextView
                        android:id="@+id/totalItem1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10sp"
                        android:text="0" />

                    <Button
                        android:id="@+id/button_plus1"
                        android:layout_width="50sp"
                        android:layout_height="60sp"
                        android:layout_marginLeft="10dp"
                        android:text="+" />
                </LinearLayout>
            </GridLayout>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal"
                android:useDefaultMargins="true"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/nasigoreng" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/food_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Nasi Goreng"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/food_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="15000"
                            android:textColor="@android:color/darker_gray"
                            android:textFontWeight="400"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/food_detail2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:paddingTop="10sp"
                            android:text="Detail Produk"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:clickable="true"/>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/button_minus2"
                        android:layout_width="50sp"
                        android:layout_height="60sp"
                        android:text="-"
                        />

                    <TextView
                        android:id="@+id/totalItem2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10sp"
                        android:text="0" />

                    <Button
                        android:id="@+id/button_plus2"
                        android:layout_width="50sp"
                        android:layout_height="60sp"
                        android:layout_marginLeft="10dp"
                        android:text="+" />
                </LinearLayout>
            </GridLayout>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal"
                android:useDefaultMargins="true"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/burger" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Burger"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="50000"
                            android:textColor="@android:color/darker_gray"
                            android:textFontWeight="400"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/food_detail3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:paddingTop="10sp"
                            android:text="Detail Produk"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:clickable="true"/>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/button_minus3"
                        android:layout_width="50sp"
                        android:layout_height="60sp"
                        android:text="-"
                        />

                    <TextView
                        android:id="@+id/totalItem3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10sp"
                        android:text="0" />

                    <Button
                        android:id="@+id/button_plus3"
                        android:layout_width="50sp"
                        android:layout_height="60sp"
                        android:layout_marginLeft="10dp"
                        android:text="+" />
                </LinearLayout>
            </GridLayout>

        </LinearLayout>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minuman"
        android:textFontWeight="600"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal"
                android:useDefaultMargins="true"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/aqua" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Aqua"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="15000"
                            android:textColor="@android:color/darker_gray"
                            android:textFontWeight="400"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/food_detail4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:paddingTop="10sp"
                            android:text="Detail Produk"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:clickable="true"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/button_minus4"
                        android:layout_width="50sp"
                        android:layout_height="60sp"
                        android:text="-"
                        />

                    <TextView
                        android:id="@+id/totalItem4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10sp"
                        android:text="0" />

                    <Button
                        android:id="@+id/button_plus4"
                        android:layout_width="50sp"
                        android:layout_height="60sp"
                        android:layout_marginLeft="10dp"
                        android:text="+" />
                </LinearLayout>
            </GridLayout>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal"
                android:useDefaultMargins="true"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/liptontea" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Tea"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="15000"
                            android:textColor="@android:color/darker_gray"
                            android:textFontWeight="400"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/food_detail5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:paddingTop="10sp"
                            android:text="Detail Produk"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:clickable="true"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/button_minus5"
                        android:layout_width="50sp"
                        android:layout_height="60sp"
                        android:text="-"
                        />

                    <TextView
                        android:id="@+id/totalItem5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10sp"
                        android:text="0" />

                    <Button
                        android:id="@+id/button_plus5"
                        android:layout_width="50sp"
                        android:layout_height="60sp"
                        android:layout_marginLeft="10dp"
                        android:text="+" />
                </LinearLayout>
            </GridLayout>

        </LinearLayout>

    </LinearLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:rowCount="2"
        android:background="@color/purple_500">

        <TextView
            android:id="@+id/checkouttotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="Total : 0 Pesanan"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            >
        <TextView
            android:id="@+id/total_price_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 0"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            />
            <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/checkoutBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checkout"
                android:fontFamily="sans-serif-black"
                />
        </LinearLayout>
    </GridLayout>

</RelativeLayout>
